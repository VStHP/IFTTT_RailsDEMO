<%= form_for @post, remote: true do |f| %>
  <div class="field <%= check_errors(@post, :content) %>">
    <%= f.text_area :content, class: 'form-control', placeholder: "What are you thinking?" %>
    <span class="help-block"><%= show_errors(@post, :content) %></span>
  </div>
  <div class="form-group <%= check_errors(@post, :hashtag) %>">
    <%= f.text_field :hashtag, class: 'form-control', placeholder: "Post's hashtag (example #hashtag)" %>
    <span class="help-block"><%= show_errors(@post, :hashtag) %></span>
  </div>
  <div><%= f.submit 'Submit', class: 'btn btn-primary' %></div>
<% end %>
